<h1 align="center"></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>
        <%= f.label t('user_name') %>
        <%= f.text_field :user_name, class: 'form-control' %>
        <%= f.label t('password') %>
        <%= f.password_field :password, class: 'form-control' %>
        <%= f.submit t('login'), class: "btn btn-primary btn-block" %>
        <%= f.hidden_field :app_id, :value => params[:app_id] %>
        </br>
        <span>
          <span class="pull-left"> <%= link_to t('register'), new_user_url %></span>
          <span class="pull-right"> <%= link_to t('forget_password?'), new_password_reset_url %></span>
        </span>
    <% end %>
  </div>
  <div>
  </div>

</div>

