<%= form_tag(reset_password_path, method: :put) do |form| %>
    <div class="field">
      <%= label_tag :new_password %>
      <%= password_field_tag :new_password %>
    </div>

    <div class="field">
      <%= label_tag :user_name %>
      <%= text_field_tag :user_name %>
    </div>

    <div class="field">
      <%= label_tag '2FA_verification_code' %>
      <%= text_field_tag :otp_code %>
    </div>

    <div class="actions">
      <%= submit_tag %>
    </div>
<% end %>
