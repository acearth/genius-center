<h1>PasswordResets | Input your new password</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:reset_info, url: password_resets_path, method: :put) do |f| %>

        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>

        <%= f.hidden_field :sign, value: params[:sign] %>
        <%= f.hidden_field :reset_token, value: params[:password_reset_token] %>
        <%= f.hidden_field :email, value: params[:email] %>
        <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
