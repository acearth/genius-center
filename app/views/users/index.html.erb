<%= form_tag("/admin/users/role") do %>
  <table class="table">
  <thead>
    <tr>
      <th>Select</th>
      <th>User name</th>
      <th>Email</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= check_box_tag("user::#{user.id || user.user_name}", user.user_name) %>
        </td>
        <td>
        <td><%= (user.display_name || user.user_name) %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
      </tr>
    <% end %>
  </tbody>
</table>

  <%= select_tag(:new_role, options_for_select([['admin', 'admin'], ['cimaster', 'cimaster'], ['ordinary', 'ordinary']])) %>

  <%= submit_tag('Change role') %>
