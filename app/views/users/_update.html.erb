<%= form_with(model: user, local: true) do |form| %>
    <%= render 'shared/error_messages' %>

    <div class="field">
      <%= form.label t('mobile_phone') %>
      <%= form.text_field :mobile_phone, id: :user_mobile_phone %>
    </div>

    <div class="field">
      <%= form.label t('email') %>
      <%= form.text_field :email, id: :user_email %>
    </div>


    <div class="field">
      <%= form.label t('password') %>
      <%= form.password_field :password, id: :user_password %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
<% end %>
