<%= form_with(model: user, local: true) do |form| %>
    <%= render 'shared/error_messages' %>
    <div class="field">
      <%= form.label t('user_name') %>

      <%= form.text_field :user_name, id: :user_user_name, disabled: true %>
    </div>

    <div class="field">
      <%= form.label t('emp_id') %>
      <%= form.text_field :emp_id, id: :user_emp_id, class: 'form-control' %>
    </div>

    <div class="field">
      <%= form.label t('mobile_phone') %>
      <%= form.text_field :mobile_phone, id: :user_mobile_phone, class: 'form-control' %>
    </div>

    <div class="field">
      <%= form.label t('email') %>
      <%= form.text_field :email, id: :user_email, disabled: true %>
    </div>


    <div class="field">
      <%= form.label t('password') +' | ! You don`t need to input password unless you want to change your password' %>
      <%= form.password_field :password, id: :user_password, class: 'form-control' %>
    </div>
    <div class="field">
      <%= form.label 'New ' + t('password') %>
      <%= form.password_field :password_new, id: :user_password_new, class: 'form-control' %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
<% end %>
