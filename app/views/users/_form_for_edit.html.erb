<%= form_with(model: user, local: true) do |form| %>
    <%= render 'shared/error_messages' %>
    <div class="field">
      <%= form.label t('emp_id') %>
      <%= form.text_field :emp_id, id: :user_emp_id, class: 'form-control' %>
    </div>

    <div class="field">
      <%= form.label t('mobile_phone') %>
      <%= form.text_field :mobile_phone, id: :user_mobile_phone, class: 'form-control' %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
<% end %>

<%= form_with(model: user, url: update_password_path) do |form| %>
    <%= render 'shared/error_messages' %>
    <div class="field">
      <%= form.label t('password') %>
      <%= form.password_field :password, id: :user_password, class: 'form-control' %>
    </div>
    <div class="field">
      <%= form.label 'New ' + t('password') %>
      <%= form.password_field :password_new, id: :user_password_new, class: 'form-control' %>
    </div>
    <div class="actions">
      <%= form.submit 'Update Password' %>
    </div>
<% end %>

<%= form_with(model: user, url: reset_otp_key_url) do |form| %>
    <%= render 'shared/error_messages' %>

    <div class="field">
      <%= form.label t('password') %>
      <%= form.password_field :password, id: :user_password, class: 'form-control' %>
    </div>

    <div class="actions">
      <%= form.submit 'Update your OTP key' %>
    </div>
<% end %>

