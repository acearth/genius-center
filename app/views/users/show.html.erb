<p>
  <strong><%= t('user_name') %></strong>
  <%= @user.user_name %>
</p>

<p>
  <strong><%= t('emp_id') %></strong>
  <%= @user.emp_id %>
</p>

<p>
  <strong><%= t('mobile_phone') %></strong>
  <%= @user.mobile_phone %>
</p>

<p>
  <strong><%= t('email') %></strong>
  <%= @user.email %>
</p>
<p>
  <% if @qr_code %>
    <h1>
      <strong>Please scan following QR code for 2FA if you have Auth App, such as GoogleAuthenticator</strong>
    </h1>
    <div class="center">
      <%= raw @qr_code.as_svg %>
    </div>
    <% @qr_code = nil %>
<% end %>
</p>
<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
