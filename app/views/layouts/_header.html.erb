<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t('genius-center'), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t('home'), root_path %></li>
        <li><%= link_to t('help'), help_path %></li>
        <% if is_admin? %>
          <li><%= link_to 'Manage user', admin_users_index_path %></li>
        <% end %>
        <% if logged_in? %>
            <li><%= link_to t('service_provider'), service_providers_path %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= current_user.user_name %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to t('settings'), edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to t('logout'), logout_path, method: :delete %>
                </li>
              </ul>
            </li>
        <% else %>
            <li><%= link_to t('login'), login_path %></li>
        <% end %>
        <li class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-flag" style="color: red"></span>&nbsp;
            Languages<b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li><%= link_to 'English', url_with('en') %></li>
            <li><%= link_to '日本語', url_with('jp') %></li>
            <li><%= link_to '中文简体', url_with('zh-CN') %></li>
          </ul>
        </li>
        <li><%= link_to t('feedback'), '/feedbacks/new' %></li>
      </ul>
    </nav>
  </div>
</header>